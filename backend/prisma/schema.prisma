model Chats {
  id    String @id @default(uuid())
  title String
  // userId    String

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  // user User @relation(fields: [userId], references: [id])
  messages Messages[]
}

model Messages {
  id       String @id @default(uuid())
  chatId   String
  msgIndex Int
  role     Role
  content  String

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  chat Chats @relation(fields: [chatId], references: [id])
}

enum Role {
  AI
  USER
}
